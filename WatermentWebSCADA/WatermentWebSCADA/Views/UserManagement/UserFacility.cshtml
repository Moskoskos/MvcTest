@model IEnumerable<WatermentWebSCADA.ViewModels.UserAndFacilityVM>

@{
    ViewBag.Title = "UserFacility";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Facility owners</h2>


<div>
    <div class="row">
        <div class="col-md-12">
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.UserName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FacilityName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SerialNumber)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FacilityName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SerialNumber)
                        </td>
                       
                    </tr>
                }

            </table>
            <a class="btn btn-success" href="~/UserManagement/Index/">Back</a>
            <a class="btn btn-success" href="~/UserManagement/LinkUserAndFacility">Link a user with a facility</a>
        </div>
    </div>
</div>

